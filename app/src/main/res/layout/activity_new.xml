<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="josh.logme.NewActivity">

    <Button
        android:id="@+id/btn_getdose"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="get_dose"
        android:text="Get Dose"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="147dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="164dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="147dp" />

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="195dp"
        android:orientation="horizontal"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="230dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="80dp"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="36dp">

            <TextView
                android:id="@+id/txt_carbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="carbs"
                tools:layout_editor_absoluteX="77dp"
                tools:layout_editor_absoluteY="27dp" />

            <NumberPicker
                android:id="@+id/carb_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="33dp">

            <TextView
                android:id="@+id/txt_bg1"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="Blood"
                tools:layout_editor_absoluteX="202dp"
                tools:layout_editor_absoluteY="27dp" />

            <NumberPicker
                android:id="@+id/bg_input_whole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="33dp">

            <TextView
                android:id="@+id/txt_bg2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="Sugar"
                tools:layout_editor_absoluteX="202dp"
                tools:layout_editor_absoluteY="27dp" />

            <NumberPicker
                android:id="@+id/bg_input_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtDosage"
        android:layout_width="225dp"
        android:layout_height="34dp"
        android:layout_marginEnd="68dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="68dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/txtCustom"
        android:layout_width="111dp"
        android:layout_height="47dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="91dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="91dp" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="107dp"
        android:layout_height="70dp"
        android:layout_marginBottom="4dp"
        android:text="Save"
        android:onClick="save"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="6dp" />

    <RadioGroup
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginLeft="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="29dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtCustom"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_getdose"
        android:layout_marginBottom="47dp">

        <RadioButton
            android:id="@+id/rb_recommend"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:checked="true"
            android:onClick="checkCustom"
            android:text="Using Recommended"
            app:layout_constraintBottom_toTopOf="@+id/rb_Custom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/btn_getdose"
            app:layout_constraintTop_toBottomOf="@+id/btn_getdose"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <RadioButton
            android:id="@+id/rb_Custom"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:onClick="checkCustom"
            android:text="Using Custom Dose"
            app:layout_constraintBottom_toTopOf="@+id/txtCustom"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/rb_recommend"
            app:layout_constraintRight_toRightOf="@+id/rb_recommend"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="erase mem"
        android:onClick="erase_mem"
        app:layout_constraintRight_toLeftOf="@+id/txtDosage"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="1dp" />

</android.support.constraint.ConstraintLayout>
